<% type = @invoice.resource_class %>
<% isMembership = type == "member" %>
<% friendly_type = isMembership ? 'membership' : 'rental' %>

<div style="width: 100%">
  <h3> Refund requested for <%= friendly_type %> payment to Manchester Makerspace</h3>
  <div>
    <p>Hi <%=@member.fullname%>!</p>
    <p>Your request for refund of your <%=friendly_type%> purchase is being reviewed.</p>
    <p>Details regarding your purchase can be found below.</p>
    <br/>
    <%= render 'transaction_table' %>
  </div>
</div>
